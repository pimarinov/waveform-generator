{
    "name": "pimarinov/waveform-generator",
    "description": "Waveform Generator - Backend Task by Plamen Marinov",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Plamen Marinov",
            "email": "webdivane@gmail.com"
        }
    ],
    "require": {
		"php": "^8.1"
	},
    "require-dev": {
        "phpunit/phpunit": "10.0.x-dev"
	},
    "autoload": {
        "psr-4": {
            "Pimarinov\\WaveformGenerator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pimarinov\\WaveformGenerator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
